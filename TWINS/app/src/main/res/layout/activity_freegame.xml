<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECFAFF">

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:text="JUGAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showCardTime" />

    <EditText
        android:id="@+id/totalTime"
        android:layout_width="190dp"
        android:layout_height="38dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:inputType="time"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <EditText
        android:id="@+id/turnTime"
        android:layout_width="190dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:inputType="time"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textColorLink="#000000"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/textView11"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/showCardTime"
        android:layout_width="190dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:foregroundTint="#FFFFFF"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textColorLink="#000000"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="58dp"
        android:layout_height="59dp"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        app:srcCompat="@drawable/settings_img" />

    <Spinner
        android:id="@+id/deckSpinner"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:background="#81C3B9B9"
        android:backgroundTint="#000000"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <Spinner
        android:id="@+id/soundSpinner"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:background="#81C3B9B9"
        android:backgroundTint="#000000"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView9" />

    <Spinner
        android:id="@+id/gamemodeSpinner"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:background="#81C3B9B9"
        android:backgroundTint="#000000"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/textView12" />

    <Spinner
        android:id="@+id/boardSpinner"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:background="#81C3B9B9"
        android:backgroundTint="#000000"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <Spinner
        android:id="@+id/boardSpinner2"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:background="#81C3B9B9"
        android:backgroundTint="#000000"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="@+id/textView13" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:text="Configurar Partida"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="62dp"
        android:layout_height="22dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:text="BARAJA"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="83dp"
        android:layout_height="21dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:text="PACK AUDIO"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="101dp"
        android:layout_height="19dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:text="TIEMPO TOTAL"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="109dp"
        android:layout_height="18dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="52dp"
        android:text="TIEMPO VOLTEO"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="99dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="TIPO PARTIDA"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="123dp"
        android:layout_height="21dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="MOSTRAR CARTAS"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="67dp"
        android:layout_height="21dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="52dp"
        android:text="TABLERO"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="21dp"
        android:layout_height="22dp"
        android:layout_marginStart="15dp"
        android:gravity="center_horizontal"
        android:text="X"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/boardSpinner"
        app:layout_constraintTop_toTopOf="@+id/boardSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>