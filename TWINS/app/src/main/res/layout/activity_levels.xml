<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LevelsActivity">

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="412dp"
        android:layout_height="645dp"
        android:layout_marginTop="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/level1"
                android:layout_width="130dp"
                android:layout_height="176dp"
                android:clickable="false"
                android:paddingLeft="7.5dp"
                android:paddingTop="7.5dp"
                android:paddingRight="7.5dp"
                android:paddingBottom="7.5dp"
                app:srcCompat="@drawable/level1notpassed" />

            <ImageView
                android:id="@+id/level2"
                android:layout_width="130dp"
                android:layout_height="176dp"
                android:paddingLeft="7.5dp"
                android:paddingTop="7.5dp"
                android:paddingRight="7.5dp"
                android:paddingBottom="7.5dp"
                app:srcCompat="@drawable/level2notpassed" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/level3"
                android:layout_width="130dp"
                android:layout_height="176dp"
                android:paddingLeft="7.5dp"
                android:paddingTop="7.5dp"
                android:paddingRight="7.5dp"
                android:paddingBottom="7.5dp"
                app:srcCompat="@drawable/level3notpassed" />

            <ImageView
                android:id="@+id/level4"
                android:layout_width="130dp"
                android:layout_height="176dp"
                android:paddingLeft="7.5dp"
                android:paddingTop="7.5dp"
                android:paddingRight="7.5dp"
                android:paddingBottom="7.5dp"
                app:srcCompat="@drawable/level4notpassed" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/level5"
                android:layout_width="130dp"
                android:layout_height="176dp"
                android:paddingLeft="7.5dp"
                android:paddingTop="7.5dp"
                android:paddingRight="7.5dp"
                android:paddingBottom="7.5dp"
                app:srcCompat="@drawable/level5notpassed" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/montserrat"
        android:text="¿Podrás pasártelos todos?"
        android:textColor="#288DE4"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>