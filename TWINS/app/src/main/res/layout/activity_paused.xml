    <Button
        android:id="@+id/resumeGame"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="152dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"

        android:text="RESUME"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/restartGame"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="44dp"
        android:background="#FFFFFF"
        android:text="Restart game"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resumeGame" />

    <Button
        android:id="@+id/mainMenu"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:background="#FFFFFF"
        android:text="Main Menu"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restartGame" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="PAUSED"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <ImageButton
        android:id="@+id/muteAll"
        android:layout_width="57dp"
        android:layout_height="58dp"
        android:background="@drawable/rounded_square"
        android:backgroundTint="#D9D9D9"
        android:tint="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/resumeGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />


